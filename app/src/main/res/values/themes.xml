<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeniusPark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/default_color</item>
        <!-- Customize your theme here. -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>
        <item name="fontFamily">@font/montserrat_regular</item>


    </style>

    <style name="SlideAnimation" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>
        <item name="android:statusBarColor">@color/default_color</item>
        <item name="fontFamily">@font/montserrat_regular</item>

        <!--colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
    </style>

    <!--   Custom color for all the TextInputLayout.OutlineBox     -->
    <style name="CustomTextInputLayout"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/default_color</item>
<!--        <item name="android:textColorHint">@color/default_color</item>-->
    </style>

    <!--    Custom Shape appearance for the edges of the TextInputLayout -->
    <style name="CutEdges" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TextAppearance.Medium.Bold" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Hover Theme Customization   -->
    <style name="myHoverTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/colorPureWhite</item>
        <item name="hover_primaryColor">@color/colorPrimaryDark</item>
        <item name="hover_textColor">@color/colorPureWhite</item>
        <item name="hover_textColorTitle">@color/colorHoverWhite</item>
        <item name="hover_pinEntryColor">@color/colorPureWhite</item>
        <item name="hover_pinTheme">@style/PinButtonTheme</item>
        <item name="hover_posTheme">@style/PosButtonTheme</item>
        <item name="fontFamily">@font/montserrat_regular</item>

    </style>

    <style name="PinButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorPureWhite</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/button_layout</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PosButtonTheme" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textColor">@color/colorPureWhite</item>
    <item name="background">@drawable/button_layout</item>
    <item name="android:typeface">normal</item>
    <item name="android:textAllCaps">false</item>
    <item name="fontFamily">@font/montserrat_regular</item>
    </style>

</resources>